<div ng-app="app">
    <div ng-controller="gameController as gc">
        <div class="board-wrapper">
            <div class="board vcenter fadeIn">
                <ul data-ng-repeat="row in gc.board.Rows">
                    <li>
                        <ul class="board-row" data-ng-repeat="column in gc.board.Columns">
                            <li class="board-cell" ng-class="gc.board.CellClass">
                                {{ row + ',' + column }}
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="Ups, wystąpił błąd">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">{{ gc.error.Status }}</h4>
                    </div>
                    <div class="modal-body">
                        <h5>{{ gc.error.Message }}</h5>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    @Scripts.Render("~/bundles/app")
}
